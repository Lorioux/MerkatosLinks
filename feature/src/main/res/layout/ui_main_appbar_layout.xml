<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main.appbar"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CollapsingToolbarLayout
        android:id="@+id/main.title.collapse"
        app:toolbarId="@+id/main.app.toolbar"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        app:expandedTitleGravity="bottom"
        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
        app:collapsedTitleGravity="start">

        <android.support.v7.widget.Toolbar
            android:id="@+id/main.app.toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp" />  <!--
            app:layout_scrollFlags="scroll|snap"
            app:layout_collapseMode="pin"app:layout_collapseMode="parallax" app:navigationIcon="@drawable/ic_menu_24px"-->
    </android.support.design.widget.CollapsingToolbarLayout>

    <include layout="@layout/ui_tab_layout_model" />
</android.support.design.widget.AppBarLayout>